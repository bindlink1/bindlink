<%= javascript_include_tag 'universalsearch'%>
<%= form_tag("/searches/finduniversal", :method => "get",:class=>"form-search" , :remote=> true) do %>
    <div style="display: inline;">
      <li class="dropdown" style="display: inline; vertical-align: bottom;">
        <a  data-toggle="dropdown" style="margin-top: 0" href="#polmenu" class="btn btn-info searchtypebutton" id="searchtypebtn">

          <span id="searchtypetxt" style="white-space: nowrap;">Anything  <span class="caret" style="text-align: right;"></span></span>

        </a>
        <ul class="dropdown-menu" id="searchdropdown" >
          <li>
            <a data-target="#" id="search_policies"> Policies</a>
          </li>

          <% if current_agent.isgeneralagent == "Retail" %>
              <li>
                <a data-target="#" id="search_clients"> Clients </a>
              </li>
              <li>
                <a data-target="#" id="search_prospects"> Prospects </a>
              </li>
              <li>
                <a data-target="#" id="search_phoneemail"> Phone/e-Mails </a>
              </li>
              <li>
                <a data-target="#" id="search_address"> Addresses </a>
              </li>
          <% else %>
              <li>
                <a data-target="#" id="search_namedinsured"> Named Insureds </a>
              </li>
              <li>
                <a data-target="#" id="search_producingagency"> Producing Agencies </a>
              </li>
              <li>
                <a data-target="#" id="search_agencycode"> Agency Code </a>
              </li>
          <% end %>

          <li class="divider"></li>
          <li>
            <a data-target="#" id="search_anything"> Anything </a>
          </li>
        </ul>
      </li>

      <div class="input-append">
        <!--[if IE]>
        <input type="text" class="span4 " name="searchtext" id="searchbox"  placeholder="  Search..." style=" padding-left: 5px; line-height:22px; height: 22px; min-width: 350px; margin-left: 0;">
        <![endif]-->
        <![if !IE]>
        <input type="text" name="searchtext"  placeholder="  Search..." class="span5 universalinput">
        <![endif]>

        <button type="submit" class="btn btn-info searchbutton" id="unisearchbtn" style=""><i class="icon-search icon-white"></i>  Search</button>

      </div>
      <input type="hidden" name="searchtype" id="searchtype" value="Anything">
    </div>


<%end%>
