$('#cancelreinstatelink').html('<%= link_to cancel_policy_path(:id=>@policyforview.id), :remote=>true, :id=>"cancelpolbutton" , :disabled => @cancelbuttondisabled do  %> <i class="icon-remove"></i> Cancel <%end%>');




