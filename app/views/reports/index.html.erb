<%= javascript_include_tag "reports" %>
<% title "Reports | bindlink" %>
<div class="col1wrap">
  <div class="col1 wellwhite"  >
    <div class="wellwhitemenu">
      <span class="headtext">
        <span id="pageheader">Report Home</span>
      </span>
    </div>
    <div class="container-fluid">
      <div class="row-fluid">
        <div class="span4">
          <h3>Select Report</h3>
          <select id="rptselect">
            <option value="default">Select One</option>
            <option value="account">Account Transactions</option>
            <option value="agedrec">Aging Invoice</option>
            <option value="cash">Cash Deposited Report</option>
            <option value="commission">Commission</option>
            <option value="fees">Fees</option>
            <option value="expiration">Policy Expiration</option>
            <option value="renewal">Policy Renewal</option>
            <option value="policytrans">Policy Transaction Report</option>
            <option value="producer">Producing Agencies</option>
            <option value="return">Return Premium</option>
            <option value="surplus">Surplus Lines</option>
            <option value="surplusauto">Surplus Lines Auto</option>
          </select>
          <hr>
          <%= render 'reportcontrols' %>
        </div>
        <div class="span1"></div>
        <div class="span7">
          <iframe name="report_frame" style="width: 100%; height: 50%; min-height: 700px;" src="/reportbackground" >
          </iframe>
        </div>
      </div>
    </div>
  </div>
</div>

