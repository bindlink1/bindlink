<% end %>

<script>
	$("#clientaddress_zip").keyup(function() {
        var el = $(this);

        if (el.val().length === 5) {
            $.ajax({
                url: "https://ziptasticapi.com/"+el.val(),
                cache: false,
                dataType: "json",
                type: "GET",
                success: function(result, success) {
                    $("#clientaddress_city").val(result.city);
                    $("#clientaddress_state").val(result.state);
                }
            });
        }
    });
</script>