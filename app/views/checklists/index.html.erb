<div class="col1wrap">
  <div class="col1 wellwhite">
    <div class="wellwhitemenu"><span class="headtext">Checklist Creator</span></div>

    <p><%= link_to "Create New Checklist", new_checklist_path , :class=>"btn btn-success btn-small" %></p>
    <table class="table table-striped table-bordered table-condensed">
      <thead>
      <tr>
        <th>ID</th>
        <th>Checklist Name</th>
      </tr>
      </thead>
      <tbody>
      <% @checklists.each do |checklist| %>
        <tr>
          <td><%= checklist.id%></td>
           <td><%= link_to checklist.checklist_name ,checklist_path(checklist) %></td>
        </tr>
    <% end %>
      </tbody>

    </table>
  </div>
</div>
