
<div class="dataTablewrapper">
<table class="table table-bordered table-striped table-layout:fixed " id="clientpolicies">


  <% if @policiesforclients.blank? %>
      <tr>
        <td colspan="6" style="text-align: center; background-color: #eeeeee;">

          No <span id="viewtype">policies</span> for <%= @clientforview.fullname%> just yet.

        </td>
      </tr>
  <%else%>
      <thead>
      <tr>
        <th>Policy Number</th>
        <th>Effective Date</th>
        <th>Expiration Date</th>
        <th>Line of Business</th>
        <th>Carrier</th>
        <th>Status</th>
      </tr>
      </thead>
  <%end%>
  <tbody>
  <% @policiesforclients.each do |policy| %>

      <tr>
        <td><b style="text-decoration: underline;"><%= link_to policy.policy_number.to_s , policy_path(:id => policy) %></b></td>
        <td><%= policy.effective_date.strftime("%m/%d/%Y") %></td>
        <td><%= policy.expiration_date.strftime("%m/%d/%Y") %></td>
        <td><%= policy.lineofbusiness.line_name %></td>
        <td><%= policy.carrier.carrier_name %></td>
        <td><%= policy.status %></td>
      </tr>



  <% end %>

  </tbody>
</table>
    </div>

