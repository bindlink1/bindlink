
<%= form_for [@policy,@note], :remote =>true do |f| %>
    <div class="control-group">

      <%= f.label :notetext,"Note", :class=>"control-label" %>
      <div class="controls">
        <%= f.text_area :notetext , :class =>'required BLselect', :autocomplete => :off,:minlength=>'2', :cols => 80, :rows => 5 %>
      </div>

      <div class="form-actions"><%= f.submit 'Create Note', :class=>'btn btn-success', :id=>'Create Note' %> <button class="btn" id="notecancel" onclick='return false;'>Go Back</button>  </div>
    </div>

<%end%>