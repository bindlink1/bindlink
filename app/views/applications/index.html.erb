<% @applications.each do |application| %>
  <tr bgcolor="green">
    <td><%= application.named_insured %></td>
    <td><%= application.premium %></td>
    <td><%= application.bound %></td>
    <td><%= link_to 'Show', application %></td>
    <td><%= link_to 'Edit', edit_application_path(application) %></td>
    <td><%= link_to 'Destroy', application, confirm: 'Are you sure you want to delete this application?', method: :delete %></td>
  </tr>
<% end %>
</table>

