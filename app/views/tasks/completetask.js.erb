if  ($("#taskdetails").is(":visible")) {
$('.controlright:visible').find('.taskheaderwork').html('<%=escape_javascript(render 'sleektaskhead') %>');
$("#task<%=@task.id%>").html('<%=escape_javascript(render :partial=> 'tasks/singletasksleekdata' , :locals => { :task => @task }) %>');

};


$("#note_notetext").val("");

$(".todaybadge:visible").html('<%=  @todaycount %>');
$(".overduebadge:visible").html('<%= @overduecount %>');
