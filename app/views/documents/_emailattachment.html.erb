<div id="documentdetails_<%=document.id%>">

  <%= link_to document.name, download_document_path(document, :id =>document.id), :target => "_blank" , :class=>'linktext'%>
  <div class="documentdetails">
    Created : <%= document.created_at.strftime("%m-%d-%Y") %></div>
  <div style="margin-top: 3px;">
    <div class="btn-group"  style="z-index: 99">
      <a class="btn btn-mini dropdown-toggle" data-toggle="dropdown" href="#">
        Actions
        <span class="caret"></span>
      </a>
      <ul class="dropdown-menu">
        <li>
          <%= link_to "View", download_document_path(document, :id =>document.id), :target => "_blank" %>
        </li>
        <li>
          <%= link_to "Edit", edit_document_path(document.id), :remote => true %>
        </li>
        <li>
          <%= link_to "Send via e-Mail", new_email_path(:document=>document.id), :remote=> true %>
        </li>
        <li class="divider"></li>
        <li>
          <%= link_to('Delete', document, :confirm => 'Are you sure you want to delete this document? Once deleted, the document is no longer available.', :method => :delete, :remote => true) %>
        </li>
      </ul>
    </div>
  </div>
</div>
<div id="documentwork_<%=document.id%>"></div>