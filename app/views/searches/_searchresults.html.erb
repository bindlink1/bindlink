<table class="table table-striped table-bordered table-condensed" >
  <thead>
  <tr>
    <td>Invoice Id</td>
    <td>Policy Number</td>
    <td>Policy Status</td>
    <td>Due Date</td>
    <td>Balance</td>
  </tr>


  </thead>


  <tbody>
  <% @search.each do |result| %>

      <% result.invoices.each do |inv| %>
          <% if inv.is_paid == "Not Paid" %>
              <tr>
                <td> <%= link_to inv.id, bulkcash_path(:id => inv.id), :remote=>true %>

                </td>
                <td>
                  <%= result.policy_number %>
                </td>
                <td>
                  <%= result.status%>
                </td>
                <td>

                  <%=inv.due_on.strftime("%m/%d/%Y") %>
                </td>
                <td>
                  <%=inv.outstandingbalance %>
                </td>
              </tr>
          <% end  %>
      <%end%>
  <% end %>
  </tbody>
</table>