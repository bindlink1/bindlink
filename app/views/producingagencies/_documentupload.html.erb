<%= javascript_include_tag "uploaddocument" %>
</br>
<div class="wellwhite">
    <h3>Upload Document</h3>
   <div id="uploadstatus"></div>
  <hr>

<%= form_for @document , :url => createproducingagencydoc_path(@producerforview) , :class=>"form-vertical", :html => { :multipart => true,:autocomplete => "off" ,:id =>'documentform' }, :remote => true   do |f| %>

                    <div class="control-group">

                        <%= f.label :name,"Document Name", :class=>"control-label" %>
                        <div class="controls">
                         <%= f.text_field :name,:class=>"input-xlarge" %>
                        </div>
                    </div>
                    <div class="control-group">

                        <%= f.label :image,"Document to Upload", :class=>"control-label" %>
                        <div class="controls">
                          <%= f.file_field :image,:class=>"input-xlarge" %>
                        </div>
                    </div>

            <div class="form-actions"><%= f.submit "Save",disable_with: 'Saving...', :id=>"uploadbutton", :class=>"btn btn-success"%> </div>



<% end %>


</div>