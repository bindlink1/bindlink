
<div class="modal wellwhiteblock" id="myModal" style="overflow: hidden;">
  <div class="wellwhitemenu" >

    <h3>Unearned Commission Payment</h3> <button type="button" class="close closeit" data_dismiss="modal" aria_hidden="true" id ="closeit">Ã—</button>
  </div>

  <%= form_for @cashtransaction, :url=>unearnedcommissionpay_path,:html=>{:class=>"form-horizontal"}, :remote=>true do |f|%>


      <div class="control-group">
        <label class="control-label">Check Number:</label>
        <div class="controls">
          <%= f.text_field :check_number%>
        </div>
      </div>
      <div class="control-group">
        <label class="control-label">Cash Amount:</label>
        <div class="controls">
          <%= f.text_field :cash_amount%>
        </div>
      </div>

      <%= f.hidden_field :policy_id, :value=>@policy.id%>

      <div class="form-actions">
        <%= f.submit 'Process'  ,disable_with: 'Processing...', :class=>"btn btn-success" %>
        <button class="btn"  id ="close_modal" onclick='return false;'>Cancel</button>
      </div>
  <% end %>



</div>