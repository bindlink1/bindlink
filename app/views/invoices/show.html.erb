
       <div class="col1wrap">
		<div class="col1 wellwhite">
			<!-- Column 1 start -->
			<div class="page-header"><h1>Invoice Home</h1></div>
		    <h3>Overdue Invoices</h3>

		    <table id="overdueinvoices" class="display">
                        <thead>
                          <tr>
                               <th>Client Name</th>
                               <th>Created</th>
                               <th>Due Date</th>
                               <th>Total Billed</th>
                               <th>Balance</th>
                               <th>Status</th>
                          </tr>
                        </thead>
                        <tbody>
                            <% @odlist.each do |invoice| %>
                          <tr>
                            <td><%= link_to invoice.policypremiumtransaction.policy.client.client_name.to_s , view_invoice_path(:id => invoice) %></td>
                            <td><%= invoice.created_on.strftime("%m/%d/%Y")  %></td>
                            <td><%= begin invoice.due_on.strftime("%m/%d/%Y") rescue  invoice.created_on.strftime("%m/%d/%Y") end%></td>
                            <td><%= invoice.total_billed  %></td>
                            <td><%= invoice.outstandingbalance  %></td>
                            <td><%= invoice.isoverdue %></td>
                          </tr>
                            <% end %>
                        </tbody>
                      </table>



          <h2>All Invoices</h2>
                      <table id="invoices" class="display">
                        <thead>
                          <tr>
                               <th>Client Name</th>
                               <th>Created</th>
                               <th>Due Date</th>
                               <th>Total Billed</th>
                               <th>Balance</th>
                               <th>Status</th>
                          </tr>
                        </thead>
                        <tbody>
                            <% @invoices.each do |invoice| %>
                          <tr>
                            <td><%= link_to invoice.policypremiumtransaction.policy.client.client_name.to_s , view_invoice_path(:id => invoice) %></td>
                            <td><%= invoice.created_on.strftime("%m/%d/%Y")  %></td>
                            <td><%= begin invoice.due_on.strftime("%m/%d/%Y") rescue  invoice.created_on.strftime("%m/%d/%Y") end %></td>
                            <td><%= invoice.total_billed  %></td>
                            <td><%= invoice.outstandingbalance  %></td>
                            <td><%= invoice.isoverdue %></td>
                          </tr>
                            <% end %>
                        </tbody>
                      </table>


          <!-- Column 1 end -->
		</div>
       </div>
