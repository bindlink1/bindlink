<fieldset>
  <div>
    <div class="control-group">
      <%= f.label :address_type, :class=>"control-label"  %>
      <div class="controls">
        <%= f.collection_select  :address_type  ,[['Mailing Address','Mailing Address'],['Residence Address','Residence Address'],['Business Address','Business Address'],['Work Address','Work Address'],['Other Address','Other Address']], :last, :last, {:include_blank => 'Select One'}%>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :address_1, :class=>"control-label"  %>
      <div class="controls">
        <%= f.text_field :address_1,:class=>"input-xlarge",:autocomplete => :off, :placeholder =>"address 1"  %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :address_2, :class=>"control-label"  %>
      <div class="controls">
        <%= f.text_field :address_2,:class=>"input-xlarge",:autocomplete => :off, :placeholder =>"address 2"  %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :city, :class=>"control-label"  %>
      <div class="controls">
        <%= f.text_field :city,:class=>"input-xlarge",:autocomplete => :off, :placeholder =>"city"  %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :state, :class=>"control-label"  %>
      <div class="controls">

        <%= f.collection_select :state, State.order("abbreviation asc").all, :abbreviation, :abbreviation, {:include_blank => 'Select One'} %>

      </div>
    </div>
    <div class="control-group">
      <%= f.label :zip, :class=>"control-label"  %>
      <div class="controls">
        <%= f.text_field :zip,:class=>"input-xlarge",:autocomplete => :off, :placeholder =>"zip"  %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :note, :class=>"control-label"  %>
      <div class="controls">
        <%= f.text_field :note,:class=>"input-xlarge",:autocomplete => :off, :placeholder =>"note"  %>
      </div>
    </div>
    <div class="form-actions">

      <%= f.submit 'Save', :remote => true,disable_with: 'Saving...', :class=>"btn btn-success ", :id=>"contactfrmbtn"%> <button class="btn " id="close_modal" onclick='return false;' >Cancel</button>


    </div>
  </div>
</fieldset>

