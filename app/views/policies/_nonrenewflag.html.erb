
<div class="modal wellwhiteblock" id="myModal" style="overflow: hidden;">
  <div class="wellwhitemenu" >

    <h3><% if !@policy.is_nonrenew? %>Mark for non renewal<%else%>Allow renewal<%end%></h3> <button type="button" class="close closeit" data_dismiss="modal" aria_hidden="true" id ="closeit">×</button>
  </div>
  <div class="alert alert-error">
    <button type="button" class="close" data-dismiss="alert">×</button>
    <% if !@policy.is_nonrenew? %>
    <strong>Warning!</strong> This action will flag this policy for nonrenewal. Click OK below to mark for nonrenewal.
    <% else %>
        <strong>Warning!</strong> This action will allow this policy to be renewed. Click OK below to allow renewal.

  <% end %>
  </div>
  <%= form_for @policy,:method=>"POST" ,:url=>updatenonrenew_path(:id=>@policy.id), :html=>{:class=>'form-horizontal'}, :remote => true do |f| %>




      <div class="row fileupload-buttonbar">

        <div class="span7">
          <%= f.submit 'OK', :class=>"btn btn-success btn-small", :id=>"aorfrmbtn"%> <button class="btn btn-info"  id ="close_modal"  onclick='return false;'>Cancel</button>

        </div>

      </div>



  <% end %>
</div>