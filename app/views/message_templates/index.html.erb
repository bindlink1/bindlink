<% title  "Message Templates | bindlink" %>
<div class="col1wrap">
  <div class="col1 wellwhite">
    <div class="wellwhitemenu"><span class="headtext">Message Templates</span> </div>
    <br />
    <%= link_to "Add template", new_message_template_path() , :remote => true, :class=>"btn btn-success btn-mini", :id=>'newtemplate' %>
    <br />
    <div class="newDataTablewrapper">
    </div>
    <br />
    <div class="dataTablewrapper">
      <table class="table table-striped table-bordered table-condensed">
        <col width="10%" />
        <col width="10%" />
        <col width="20%" />
        <col width="60%" />
        <thead>
          <tr>
            <th>Actions</th>
            <th>Id</th>
            <th>Name</th>
            <th>Content</th>
          </tr>
        </thead>
        <tbody>
          <% @templates.each do |template| %>
              <tr id="templaterow<%=template.id%>">
                <td><%= link_to('delete', template, :confirm => 'Are you sure?', :method => :delete, :remote => true, :class=>'linktext') %>
                  | <%= link_to('edit', edit_message_template_path(template), :class => 'linktext', :remote => true) %>  </td>
                <td><%= template.id %></td>
                <td><%= template.name %></td>
                <td><%= raw( template.content.gsub( "\n", "<br>" ) ) %></td>
              </tr>
              <tr id="templaterowedit<%=template.id%>">
              </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>